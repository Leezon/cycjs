{
  "env": {
    "browser": true,
    "es2021": true,
    "jest/globals": true
  },
  "globals": {
    "window": true,
    "leezon": true
  },
  "plugins": ["prettier", "jest"],
  "extends": ["prettier", "airbnb-base", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "object-curly-newline": "off",
    "no-param-reassign": "off",
    "func-names": "off"
  },
  "ignorePatterns": ["node_modules", "dist"]
}
