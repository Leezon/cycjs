{
  "name": "cycjs",
  "version": "0.0.2",
  "description": "a javascript functional library",
  "author": "Leezon",
  "main": "lib/index.umdjs",
  "module": "lib/index.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "dev": "rollup -c ./build/rollup.config.dev && npm run build:types",
    "build": "rollup -c ./build/rollup.config.prod && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly -d --outDir lib",
    "test": "jest",
    "prepare": "husky install",
    "release": "npm run test && npm run build && release-it"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.8",
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.2.1",
    "@types/jest": "^28.1.6",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^7.0.4",
    "jest": "^28.0.2",
    "jest-environment-jsdom": "^28.0.2",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "release-it": "^14.14.3",
    "rollup": "^2.70.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript": "^1.0.1",
    "ts-jest": "^28.0.7",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Leezon/cycjs.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Leezon/cycjs/issues"
  },
  "homepage": "https://github.com/Leezon/cycjs#readme",
  "keywords": [
    "cycjs",
    "util",
    "functional",
    "server",
    "client",
    "browser"
  ],
  "lint-staged": {
    "*.ts": "prettier --write"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
